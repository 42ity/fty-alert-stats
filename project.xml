<project
    name = "fty-alert-stats"
    description = "Agent for computing aggregate statistics on alerts"
    script = "zproject.gsl"
    email = "EatonIPCOpenSource@eaton.com"
    url = "https://42ity.org"
    license = "GPL-2.0+"
    repository = "https://github.com/42ity/fty-alert-stats"
    >

    <target name = "debian" />
    <target name = "redhat" />
    <target name = "travis" />
    <target name = "jenkins" >
        <option name = "agent_label" value = "devel-image &amp;&amp; x86_64" />
        <option name = "triggers_pollSCM" value = "H/2 * * * *" />
        <option name = "test_cppcheck" value = "1" />
        <option name = "build_docs" value = "1" />
        <option name = "dist_docs" value = "1" />
    </target>

    <include filename = "license.xml" />
    <version major = "1" minor = "0" patch = "0" />
    <abi current = "0" revision = "0" age = "0" />

    <use project = "czmq"
        repository="https://github.com/42ity/czmq.git"
        release = "v3.0.2-FTY-master"
        min_major = "3" min_minor = "0" min_patch = "2" >
        <use project = "libzmq"
            repository="https://github.com/42ity/libzmq.git"
            release = "4.2.0-FTY-master" >
            <use project = "libsodium" prefix = "sodium"
                repository = "https://github.com/42ity/libsodium.git"
                release = "1.0.5-FTY-master"
                test = "sodium_init" />
        </use>
    </use>

    <use project = "malamute" min_major = "1" test = "mlm_server_test"
        repository="https://github.com/42ity/malamute.git"
        release = "1.0-FTY-master"
        />

    <!-- Note: fty-common-logging MUST be detailed before fty-proto -->
    <use project = "fty-common-logging" libname = "libfty_common_logging" header="fty_log.h"
        repository = "https://github.com/42ity/fty-common-logging.git"
        test = "fty_commmon_logging_selftest" >

        <use project = "log4cplus" header = "log4cplus/logger.h"
            test = "appender_test"
            release="1.1.2-FTY-master"
            repository="https://github.com/42ity/log4cplus.git"
            />
    </use>

    <use project = "fty-proto" libname = "libfty_proto" header="ftyproto.h" prefix="fty_proto"
        min_major = "1" min_minor = "0" min_patch = "0"
        repository = "https://github.com/42ity/fty-proto.git"
        test = "fty_proto_test" >
        <use project = "malamute" />
    </use>

    <class name = "fty_actor" private="1" selftest = "0"></class>
    <class name = "fty_alert_stats_actor" private="1" selftest = "0"></class>
    <class name = "fty_alert_stats_server" private="1">Actor</class>
    <class name = "fty_proto_stateholders" private="1" selftest = "0"></class>
    <main name = "fty-alert-stats" service = "1">Binary</main>

</project>
